{
    "env": {
        "browser": true,
        "es2022": true,
        "jest": true,
        "node": true
    },
    "extends": ["eslint:recommended", "plugin:jest/recommended", "prettier"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["jest"],
    "rules": {
        "no-console": "warn",
        "no-unused-vars": "warn",
        "prefer-const": "error"
    },
    "overrides": [
        {
            "files": ["playwright.config.js"],
            "env": {
                "node": true
            }
        }
    ]
}
