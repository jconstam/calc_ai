FROM node:20-alpine

# Install system dependencies
RUN apk add --no-cache \
    chromium \
    firefox-esr \
    webkit2gtk-4.1 \
    xvfb \
    # Required for Playwright
    libstdc++ \
    libgcc \
    libx11 \
    libxcomposite \
    libxcursor \
    libxdamage \
    libxext \
    libxi \
    libxtst \
    nss \
    cups \
    libxscrnsaver \
    libxrandr \
    alsa-lib \
    atk-bridge \
    at-spi2-core \
    pango \
    gtk+ \
    mesa-gbm \
    pulseaudio

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Install Playwright browsers
RUN npx playwright install --with-deps chromium firefox webkit

# Copy the rest of the application
COPY . .

# Expose port for live-server
EXPOSE 8080

# Start live-server
CMD ["live-server", "--port=8080", "--host=0.0.0.0"]
