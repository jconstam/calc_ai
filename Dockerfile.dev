FROM node:20-alpine

# Install system dependencies
RUN apk add --no-cache \
    chromium \
    firefox-esr \
    webkit2gtk-4.1 \
    xvfb \
    # Required for Playwright
    libstdc++ \
    libgcc \
    libx11 \
    libxcomposite \
    libxcursor \
    libxdamage \
    libxext \
    libxi \
    libxtst \
    libnss3 \
    libcups \
    libxss \
    libxrandr \
    libasound \
    libatk1.0-0 \
    libatk-bridge2.0-0 \
    libpangocairo-1.0-0 \
    libgtk-3-0 \
    libgbm1 \
    libpulse

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Install Playwright browsers
RUN npx playwright install --with-deps chromium firefox webkit

# Copy the rest of the application
COPY . .

# Expose port for live-server
EXPOSE 8080

# Start live-server
CMD ["live-server", "--port=8080", "--host=0.0.0.0"]
