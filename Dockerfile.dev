FROM node:22-alpine

WORKDIR /app

# Install system dependencies for Playwright
RUN apk add --no-cache \
    chromium \
    nss \
    freetype \
    freetype-dev \
    harfbuzz \
    ca-certificates \
    ttf-freefont \
    fontconfig \
    dbus \
    xvfb \
    # Additional dependencies for Firefox
    firefox-esr \
    # Additional dependencies for WebKit
    webkit2gtk-4.0

# Install live-server globally
RUN npm install -g live-server@1.2.2

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy the rest of the application
COPY . .

# Default command to run live-server directly
CMD ["live-server", "--port=8081"]
