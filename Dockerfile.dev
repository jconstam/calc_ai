FROM node:20-alpine

# Enable community repository and install system dependencies
RUN echo "https://dl-cdn.alpinelinux.org/alpine/v3.19/community" >> /etc/apk/repositories && \
    apk add --no-cache \
    chromium \
    firefox-esr \
    webkit2gtk-4.1 \
    xvfb \
    # Required for Playwright
    libstdc++ \
    libgcc \
    libx11 \
    libxcomposite \
    libxcursor \
    libxdamage \
    libxext \
    libxi \
    libxtst \
    nss \
    cups \
    libxscrnsaver \
    libxrandr \
    alsa-lib \
    at-spi2-core \
    pango \
    gtk+3.0 \
    mesa-gbm \
    pulseaudio

# Install live-server globally
RUN npm install -g live-server@1.2.2

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy the rest of the application
COPY . .

# Expose port for live-server
EXPOSE 8080

# Start live-server
CMD ["live-server", "--port=8080", "--host=0.0.0.0"]
